{
  "version": 2,
  "projects": {
    "frontend": {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    "backend": {
      "src": "server/index.js",
      "use": "@vercel/node",
      "routes": [
        {
          "src": "/api/(.*)",
          "dest": "server/index.js"
        }
      ]
    }
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
